    <script>
        // Popup functions
        window.addEventListener('load', function() {
            setTimeout(() => {
                document.getElementById('popupOverlay').classList.add('active');
            }, 500);
        });
 
       
        let scheduleform=document.querySelector(".scheduleform");
        function closePopup() {
            document.getElementById('popupOverlay').classList.remove('active');
        }

        document.getElementById('popupOverlay').addEventListener('click', function(e) {
            if (e.target === this) {
                closePopup();
            }
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closePopup();
            }
        });

        // Original form JavaScript
        const days = ['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday'];

        days.forEach(day => {
            const checkbox = document.getElementById(day);
            const card = document.getElementById(`card-${day}`);

            checkbox.addEventListener('change', function() {
                if (this.checked) {
                    card.classList.add('active');
                } else {
                    card.classList.remove('active');
                }
            });
        });

        function generateTimeSlots(fromTime, toTime) {
            const slots = {};
            
            if (!fromTime || !toTime) return slots;
            
            const [fromHour, fromMin] = fromTime.split(':').map(Number);
            const [toHour, toMin] = toTime.split(':').map(Number);
            
            let currentHour = fromHour;
            
            while (currentHour < toHour) {
                const nextHour = currentHour + 1;
                const startTime = formatTime(currentHour, 0);
                const endTime = formatTime(nextHour, 0);
                const slotKey = `${startTime} - ${endTime}`;
                slots[slotKey] = [];
                currentHour++;
            }
            
            return slots;
        }
        
        function formatTime(hour, minute) {
            const period = hour >= 12 ? 'PM' : 'AM';
            const displayHour = hour > 12 ? hour - 12 : (hour === 0 ? 12 : hour);
            return `${displayHour}:${minute.toString().padStart(2, '0')}`;
        }


        document.getElementById('clinicForm').addEventListener('submit', function(e) {
            e.preventDefault();

            const schedule = {};
            let hasAtLeastOneDay = false;

            days.forEach(day => {
                const checkbox = document.getElementById(day);
                if (checkbox.checked) {
                    const from = document.getElementById(`${day}-from`).value;
                    const to = document.getElementById(`${day}-to`).value;
                    
                    if (from && to) {
                        hasAtLeastOneDay = true;
                        const capitalizedDay = day.charAt(0).toUpperCase() + day.slice(1);
                        schedule[capitalizedDay] = generateTimeSlots(from, to);
                    }
                }
            });

            if (!hasAtLeastOneDay) {
                alert('Please select at least one operating day with timings.');
                return;
            }


            console.log('Schedule with Time Slots:', schedule);
         

            const successMessage = document.getElementById('successMessage');
            successMessage.style.display = 'block';

             
               

                fetch("http://localhost:3000/schedule", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(schedule)
    })
    .then((res) =>{ res.json();})
    .catch(console.error);

            
            setTimeout(() => {
                 
              //  scheduleform.submit();
                successMessage.style.display = 'none';
            }, 3000);

            this.reset();
            document.querySelectorAll('.day-card').forEach(card => {
                card.classList.remove('active');
            });
        });
    </script>
